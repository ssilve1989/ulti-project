---
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'eager' | 'lazy';
  sizes?: string;
}

const {
  src,
  alt,
  width = 24,
  height = 24,
  class: className = '',
  loading = 'lazy',
  sizes,
} = Astro.props;

// For icons in the public directory, we need to use regular img tags
// since Astro:assets only works with imported images
const isPublicAsset = src.startsWith('/');
---

{isPublicAsset ? (
  <img 
    src={src} 
    alt={alt} 
    width={width} 
    height={height} 
    class={className}
    loading={loading}
    decoding="async"
    fetchpriority={loading === 'eager' ? 'high' : 'auto'}
  />
) : (
  <Image 
    src={src} 
    alt={alt} 
    width={width} 
    height={height} 
    class={className}
    loading={loading}
    sizes={sizes}
    format="webp"
    quality={85}
  />
)}
