---
import Layout from '../../layouts/Layout.astro';
import { EventsListWithProvider } from '../../components/scheduling/EventsListWithProvider.tsx';
---

<Layout title="Event Scheduling">
  <div class="min-h-screen grid grid-cols-[1fr_min(1200px,100%)_1fr] px-4 py-8">
    <div class="col-start-2">
      <!-- Header -->
      <div class="flex justify-between items-center mb-8">
        <div>
          <h1 style="color: var(--text-primary);" class="text-3xl font-bold">Event Scheduling</h1>
          <p style="color: var(--text-secondary);" class="mt-2">Manage your team events and rosters</p>
        </div>
        <a
          href="/scheduling/create"
          style="background-color: var(--bg-accent); color: var(--text-inverse);"
          class="px-4 py-2 rounded-lg hover:opacity-90 transition-opacity"
        >
          Create New Event
        </a>
      </div>

      <!-- Events List - Client-side rendered -->
      <EventsListWithProvider client:load />
    </div>
  </div>
</Layout> 
